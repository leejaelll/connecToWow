{
  "private": true,
  "name": "cross-direction-carousel-with-sass",
  "version": "0.0.1",
  "description": "미니프로젝트 NaverWow",
  "scripts": {
    "dev": "run-p compile serve",
    "serve": "live-server public --host=localhost --port=8090 --no-browser",
    "compile": "sass src/scss:public/assets/css --update --watch",
    "build": "npm run compile -- --style compressed --no-source-map",
    "clear": "rimraf -rf public/assets/css"
  },
  "devDependencies": {
    "cssnano": "^5.1.13",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-preset-env": "^7.8.2",
    "rimraf": "^3.0.2",
    "sass": "^1.54.9"
  }
}
